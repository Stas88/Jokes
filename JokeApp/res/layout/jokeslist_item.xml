<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/gray"
    android:paddingRight="10dp"
    android:paddingLeft="10dp"
    android:paddingTop="10dp">
    
    
     <LinearLayout 
	    android:orientation="horizontal" 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	   >
     
        
	     
	     
	     <TextView android:id="@+id/author"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:textSize="18dp"
	        android:textColor="@color/avtor_text_color"
	        />
     </LinearLayout>

     <TextView android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="@color/black"
        />
     
     
     
     
     <RelativeLayout 
	    android:orientation="horizontal" 
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   >
     	  <RelativeLayout 
		        android:id="@+id/rl"
			    android:layout_width="170dp"
			    android:layout_height="wrap_content"
			   >
				   
     	      
			     <ImageView
			         android:id="@+id/like"
				      android:layout_width="wrap_content"
	     			  android:layout_height="wrap_content" 
				      android:focusable="false"
				      android:layout_marginLeft="-8dp"
				      
				      android:layout_alignParentLeft="true"
				      android:src="@drawable/rating_good" 
				     />
			      
			     
			     
			     <TextView android:id="@+id/likes"
			        android:layout_width="fill_parent"
			        android:layout_height="wrap_content"
			        android:textSize="18dp"
			         android:textColor="@color/avtor_text_color"
			        android:paddingTop="7dp"
			        android:layout_toRightOf="@+id/like"
			        />
			     
		
			       <ImageView
			          	android:id="@+id/dislike"
					    android:layout_width="wrap_content"
	        			android:layout_height="wrap_content" 
						android:src="@drawable/rating_bad" 
						android:layout_toLeftOf="@+id/dislikes"
					    android:focusable="false"
					      />
			     
			       
			      <TextView android:id="@+id/dislikes"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:textSize="18dp"
				        android:textColor="@color/avtor_text_color"
				        android:paddingTop="7dp"
				        android:layout_alignParentRight="true"
			           />
	      
	       </RelativeLayout>
	       
	       
	      <ImageView android:id="@+id/comments_countText"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content" 
	        android:src="@drawable/comments"
	    	android:layout_toLeftOf="@+id/comments_count"
	        
	        
	        
	        />
	     
	     <TextView android:id="@+id/comments_count"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textSize="18dp"
	        android:layout_alignParentRight="true"
	        android:paddingTop="7dp"
	        android:textColor="@color/avtor_text_color"/>
		

     </RelativeLayout>
     
      

</LinearLayout>